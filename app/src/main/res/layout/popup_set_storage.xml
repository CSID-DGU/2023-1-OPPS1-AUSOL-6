<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layoutstroke">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_info1"
        android:layout_width="370dp"
        android:layout_height="230dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_info_design"
        android:drawableLeft="@drawable/normalsize"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/button_info2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="370dp"
        android:layout_height="1.5dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/dotline"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@+id/button_info3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_info2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_info2"
        android:layout_width="370dp"
        android:layout_height="230dp"
        android:background="@drawable/button_info_design"
        android:drawableLeft="@drawable/coldsize"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_info1" />

    <View
        android:id="@+id/view"
        android:layout_width="370dp"
        android:layout_height="1.5dp"
        android:background="@color/black"
        android:layerType="software"
        app:layout_constraintBottom_toTopOf="@+id/button_info2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_info1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_info3"
        android:layout_width="370dp"
        android:layout_height="230dp"
        android:background="@drawable/button_info_design"
        android:drawableLeft="@drawable/freezesize"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

</androidx.constraintlayout.widget.ConstraintLayout>
